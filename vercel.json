{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "maxDuration": 10,
            "includeFiles": [
                "server/routes/**",
                "server/services/**",
                "server/utils/**",
                "server/middleware/**",
                "server/prisma/schema.prisma",
                "server/db.ts",
                "server/index.ts",
                "server/package.json"
            ]
        }
    }
}