{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "maxDuration": 10,
            "includeFiles": "server/**",
            "excludeFiles": [
                "server/node_modules/**",
                "node_modules/.prisma/client/*-windows*",
                "node_modules/.prisma/client/*-debian*",
                "node_modules/.prisma/client/*-darwin*",
                "node_modules/**/*.map",
                "node_modules/**/*.md",
                "node_modules/**/*.txt",
                "node_modules/**/test/**",
                "node_modules/**/__tests__/**"
            ]
        }
    }
}